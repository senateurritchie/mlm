	              			<hr>

		              		<div class="row">
						        <div class="col-lg-3 col-xs-6">
						         	<!-- small box -->
						          	<div class="small-box bg-purple">
						            	<div class="inner">
						              		<h3>{{ currentUser.stats.hierachical_parents}}</h3>
