						            		Voir plus <i class="fa fa-arrow-circle-right"></i>
						            	</a>
						          	</div>
						        </div>
						        
						        <div class="col-lg-3 col-xs-6">
						        	<!-- small box -->
						          	<div class="small-box bg-purple">
						            	<div class="inner">
						              		<h3>{{ currentUser.stats.generations }}</h3>

						              		<p>Générations</p>
						            	</div>
						            	<div class="icon">
